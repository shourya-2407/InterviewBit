// using variables
class Solution {
    public int minAddToMakeValid(String s) {
        Stack<Character> st = new Stack<>();
        int cnt1 = 0;
        int cnt2 = 0;

        for(int i = 0; i < s.length(); i++){
            if(s.charAt(i) == '('){
                cnt1++;
            } else if(cnt1 != 0){
                cnt1--;
            } else {
                cnt2++;
            }
        }

        return cnt2 + cnt1;
    }
}

// using stack
class Solution {
    public int minAddToMakeValid(String s) {
        Stack<Character> st = new Stack<>();
        int cnt = 0;

        for(int i = 0; i < s.length(); i++){
            if(s.charAt(i) == '('){
                st.push('(');
            } else if(!st.isEmpty()){
                st.pop();
            } else {
                cnt++;
            }
        }

        return cnt + st.size();
    }
}
